!!!5
%html
  %head
    %title=title
    %meta{:content => "true", :name => "HandheldFriendly"}/
    %meta{ name: 'apple-mobile-web-app-capable', content: 'yes' }
    %meta{ name: 'apple-mobile-web-app-status-bar-style', content: 'black-translucent' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    = stylesheet_link_tag :application, :media => 'all'
  %body{ class: body_class }
    .row
      .col-md-12
        = render 'flashes'
    = yield
    %footer.row
      .col-xs-12
        %ul.nav.nav-pills{role: :navigation}
          = tab_link root_path do
            =t('.home')
          = tab_link page_path('terms') do
            =t('.terms')
          = tab_link page_path('privacy') do
            =t('.privacy')
          = tab_link page_path('legal') do
            =t('.legal')
          - I18n.available_locales.each do |locale|
            %li.language{ class: ('active' if locale == I18n.locale) }
              = link_to t(locale), url_for(locale: locale)
      .col-xs-12
        %p
          %small= t 'description'
        %p
          %small= t 'copyright'
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-50642838-1', 'soslide.com');
      ga('send', 'pageview');
    = render 'javascript'
